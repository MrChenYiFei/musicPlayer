<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#ffffff">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_marginBottom="20dp">
       <ImageView
           android:id="@+id/song_play_return"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:onClick="songPlayReturn"
           android:background="@mipmap/xiaoyu"/>
       <TextView
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="修改密码"
           android:gravity="center"
           android:textColor="#fe8961"
           android:textSize="20sp"/>


   </LinearLayout>




<EditText
    android:id="@+id/et_new_password"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:text="请输入新密码："/>
    <EditText
        android:id="@+id/et_new_password_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="请确认新密码："/>

    <Button
        android:id="@+id/bt_ok_search"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="确认修改"
        android:textSize="26sp"
        android:textColor="#ffffff"
        android:background="@drawable/gradient_textview"
        android:gravity="center"
        android:onClick="okSearch"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>
</LinearLayout>