<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
android:gravity="center_horizontal"
    android:background="#ffffff"
    >
<ImageView
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_marginTop="20dp"
    android:src="@mipmap/icon"
    />
<TextView
    android:id="@+id/musicworld"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="music world"
    android:textSize="30sp"
    android:textStyle="bold"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Account"
    android:textColor="#000000"
    android:textSize="22sp"
    android:layout_marginTop="30dp"
    android:layout_marginRight="120sp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"/>

        <EditText

            android:id="@+id/et_logon_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textColor="#e48290"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="22sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="120sp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/et_logon_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:inputType="textPassword"
            android:textColor="#e48290"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>
    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:text="Forget your password?"
        android:onClick="clickForgetPassword"
        android:clickable="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:id="@+id/bt_logon_logon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|center_vertical"
            android:layout_weight="2"
            android:text="sign in"
            android:textSize="30sp"
            android:onClick="logon"
            android:textColor="#ffffff"
            android:background="@drawable/gradient_textview"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:gravity="center"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/bt_logon_registered"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="sign up"
            android:onClick="registered"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:background="@drawable/gradient_textview"
            />


    </LinearLayout>



</LinearLayout>