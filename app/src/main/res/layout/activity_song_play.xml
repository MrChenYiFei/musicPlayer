<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/playerbeijing">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp"
    android:gravity="center">
    <ImageView
        android:id="@+id/song_play_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="songPlayReturn"
        android:background="@mipmap/xiaoyu"/>
    <TextView
        android:id="@+id/tv_songname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="歌曲名称"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginRight="26dp"
        android:textColor="#666666"/>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_singer_name_last"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-- 林俊杰 --"
            android:textSize="18sp"
            android:textColor="#666666"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/iv_xuanzhuan"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_marginTop="100dp"
        android:background="@mipmap/music"
        android:layout_gravity="center"/>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:padding="16dp">
<TextView
    android:id="@+id/tv_start_time"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="开始时间"
    android:gravity="center"
    />
     <SeekBar
         android:id="@+id/sb_time"
         android:layout_width="0dp"
         android:layout_weight="8"
         android:progressDrawable="@drawable/seekbar_bg"
         android:layout_height="30dp"
 />
     <TextView
         android:id="@+id/tv_end_time"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:text="开始时间"
         android:gravity="center"
         />

 </LinearLayout>










    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp">
        <ImageView
            android:id="@+id/iv_stop"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:onClick="stopPlay"
            android:src="@mipmap/newstop"/>
        <ImageView
            android:id="@+id/iv_first_song"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:onClick="firstSong"
            android:src="@mipmap/bfzn_001"/>
        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:onClick="playAndStop"
            android:src="@mipmap/bfzn_003"/>
        <ImageView
            android:id="@+id/iv_last_song"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:onClick="lastSong"
            android:src="@mipmap/bfzn_002"/>

        <ImageView
            android:id="@+id/iv_random_play"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:onClick="randomPlay"
            android:src="@mipmap/randomplayer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/tv_less_volume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="lessVolume"
            android:clickable="true"
            android:text=""
            android:background="@mipmap/lessvolume"
            />

        <SeekBar
            android:id="@+id/sb_volume"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/seekbar_bg"

            />
        <TextView
            android:id="@+id/tv_add_volume"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="addVolume"
            android:clickable="true"
            android:text=""
            android:background="@mipmap/addvolume"/>

    </LinearLayout>


</LinearLayout>