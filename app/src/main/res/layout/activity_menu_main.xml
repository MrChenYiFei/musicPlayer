<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijing">




    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
        android:layout_marginTop="10dp"
    >



    <ImageView
        android:layout_width="40dp"

        android:layout_height="40dp"
        android:background="@mipmap/sanhengxian"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        />
<EditText
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:hint="     Search"

    android:textColorHint="#fe8961"
    android:background="@drawable/edit_cornes"
    />
<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:background="@mipmap/fangdajing"
    android:layout_marginRight="10dp"
    />

</LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_lunhua"
        android:layout_width="wrap_content"
        android:layout_margin="20dp"
        android:layout_height="260dp"

        android:background="@drawable/viewpager_cornes"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp"
    >
    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Singer"
        android:gravity="center"
        android:textColor="#fe8961"
        android:textSize="20sp"
        android:drawableTop="@mipmap/geshou"
        android:onClick="singer"
        android:clickable="true"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="AllSong"
        android:onClick="allSong"
        android:clickable="true"
        android:textColor="#fe8961"
        android:textSize="20sp"
        android:gravity="center"
        android:drawableTop="@mipmap/leibie"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Album"
        android:textColor="#fe8961"
        android:gravity="center"
        android:onClick="album"
        android:textSize="20sp"
        android:clickable="true"
        android:drawableTop="@mipmap/zhuanji"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="MyLike"
        android:textColor="#fe8961"
        android:gravity="center"
        android:onClick="myLikeSong"
        android:textSize="20sp"
        android:clickable="true"
        android:drawableTop="@mipmap/fensexing"
        />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:text="New Song"
        android:textSize="24sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/dayu"

        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"/>


</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
<ImageView
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:background="@mipmap/cold"
    android:layout_marginLeft="50dp"
    android:layout_marginTop="30dp"/>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@mipmap/flower"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Cold"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="2345"
        android:layout_marginLeft="86dp"
        android:textColor="#fe8961"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Flower"
        android:layout_marginLeft="118dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="6789"
        android:layout_marginLeft="58dp"
        android:textColor="#fe8961"
        android:layout_marginTop="20dp"/>
</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@mipmap/happy"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"/>
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:background="@mipmap/love"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Happy"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="1234"
            android:layout_marginLeft="68dp"
            android:textColor="#fe8961"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Love"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="3344"
            android:layout_marginLeft="76dp"
            android:textColor="#fe8961"
            android:layout_marginTop="20dp"/>


    </LinearLayout>





</LinearLayout>